---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-dvh">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Candidatos e afiliações" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="dark text-slate-400 relative min-h-full">
		<main class="pb-20 p-4 w-screen"><!-- pb-20 is footer padding -->
			<h1 class="sm:text-7xl text-4xl font-bold text-center mb-4">{title}</h1>
			<slot />
		</main>

		<slot name="footer" />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		background-size: 224px;
	}
	main {
		margin: auto;
		width: 830px; /* initially 800px, increased to accomodade the largest MEP name withouth getting 3 cols*/
		font-size: 20px;
		line-height: 1.6;
	}
</style>
